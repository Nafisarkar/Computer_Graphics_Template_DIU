{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-g",
        "${workspaceFolder}\\main.cpp", // Specify your main source file here
        "-o",
        "${workspaceFolder}\\${fileBasenameNoExtension}.exe",
        "-I${workspaceFolder}\\dependencies\\freeglut\\include",
        "-I${workspaceFolder}\\dependencies\\glew\\include",
        "-L${workspaceFolder}\\dependencies\\freeglut\\lib",
        "-L${workspaceFolder}\\dependencies\\glew\\lib",
        "-lopengl32.lib",
        "-lfreeglut",
        "-lglew32"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
